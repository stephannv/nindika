<% meta_tags %>

<% content_for :page_title, title %>

<div class="flex flex-col gap-4 justify-center items-center p-4 w-full">
  <% if games.any? %>
    <div class="flex flex-row justify-between items-center w-full">
      <div>
        <%= render Games::SortSelectComponent.new(selected: params[:sort]) %>
      </div>

      <div>
        <%= render Games::FilterFormComponent.new(
          filters_form_object: filters_form_object,
          genres: genres,
          languages: languages
        ) %>
      </div>
    </div>

    <div class="flex grow w-full">
      <%= render Games::GridComponent.new(games: games) %>
    </div>

    <%= render Navigation::PaginationComponent.new(pagy: pagy) %>
  <% else %>
    <%= render Games::NoResultsComponent.new %>
  <% end %>
</div>

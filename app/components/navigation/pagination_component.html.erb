<div class="flex justify-between items-center">
  <div>
    <%= link_to helpers.pagy_url_for(pagy, pagy.prev), class: "btn btn-sm md:btn-md", disabled: pagy.prev.blank? do %>
      <svg class="h-6 w-6 fill-current md:h-8 md:w-8" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z"></path></svg>
      <span><%= t(".prev") %></span>
    <% end %>
  </div>

  <div class="font-bold">
    <%= pagy.page %> / <%= pagy.pages %>
  </div>

  <div>
    <%= link_to helpers.pagy_url_for(pagy, pagy.next), class: "btn btn-sm md:btn-md", disabled: pagy.next.blank? do %>
      <span><%= t(".next") %></span>
      <svg class="h-6 w-6 fill-current md:h-8 md:w-8" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"></path></svg>
    <% end %>
  </div>
</div>

<% meta_tags %>

<% content_for :page_title, t(:title, scope: i18n_scope) %>

<div class="flex flex-col gap-8 p-4 justify-center">
  <div class="flex flex-col gap-4">
    <h2 class="font-bold text-xl"><%= t(:featured, scope: i18n_scope) %></h2>
    <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-3 gap-x-4 gap-y-6">
      <%= render Games::CardComponent.with_collection(trending_games.limit(3)) %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-8">
    <%= render Games::VerticalListComponent.new(
      title: t(:on_sale, scope: i18n_scope),
      games: on_sale_games,
      href: all_games_path(q: { on_sale: true }, sort: :discount_start_date_desc)
    ) %>
    <%= render Games::VerticalListComponent.new(
      title: t(:coming_soon, scope: i18n_scope),
      games: coming_soon_games,
      href: all_games_path(q: { coming_soon: true }, sort: :all_time_visits_desc)
    ) %>
    <%= render Games::VerticalListComponent.new(
      title: t(:new_releases, scope: i18n_scope),
      games: new_releases_games,
      href: all_games_path(q: { new_release: true }, sort: :all_time_visits_desc)
    ) %>
    <%= render Games::VerticalListComponent.new(
      title: t(:new_games, scope: i18n_scope),
      games: new_games,
      href: all_games_path(sort: :created_at_desc)
    ) %>
  </div>
</div>

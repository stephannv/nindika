<div class="drawer drawer-mobile">
  <input type="checkbox" id="app-drawer" class="drawer-toggle">

  <div class="drawer-content">
    <div class="flex flex-col min-h-screen">
      <div class="sticky top-0 left-0 z-30">
        <%= render Layouts::NavbarComponent.new(title: title, current_user: helpers.current_user) %>
      </div>

      <div class="flex grow">
        <%= content %>
      </div>

      <div>
        <%= render Layout::FooterComponent.new %>
      </div>
    </div>
  </div>

  <div class="drawer-side">
    <%= render Layout::SidebarComponent.new %>
  </div>
</div>
